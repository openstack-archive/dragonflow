source /opt/stack/new/dragonflow/devstack/devstackgaterc-common
source /opt/stack/new/dragonflow/devstack/devstackgaterc-etcd
export DEVSTACK_GATE_TEMPEST_REGEX="tempest.scenario.test_network_basic_ops.TestNetworkBasicOps.test_preserve_preexisting_port"
export DEVSTACK_GATE_TEMPEST_ALL_PLUGINS="1"
export OVERRIDE_ENABLED_SERVICES+=,tempest,df-bgp
export DEVSTACK_LOCAL_CONFIG+=$'\n'"NEUTRON_CREATE_INITIAL_NETWORKS=True"
export DEVSTACK_GATE_GRENADE=pullup